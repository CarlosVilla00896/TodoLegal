<%= turbo_frame_tag "autosave_flash_#{alert_origin}" do %>
  <% flash.each do | type, message | %>
    <!-- check if fade_timeout exists, if it doesn't exist it means this alert is being called from another form that is not the document form.
    In that case, we don't want the alert to fade out, so we add the default value "0" -->
    <% fade_timeout = fade_timeout || "0" %>
    <% alert_type = alert_type || "primary" %>
    <% remove_alert = remove_alert || "false" %>
    <div class="alert alert-<%= alert_type %> alert-dismissible fade show text-center animate__fadeOut" 
      role="alert" 
      data-controller="alert"
      data-fade-timeout=<%= fade_timeout %>
      data-remove-alert=<%= remove_alert %>
    >      
      <%= message %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
<% end %>