  .modal-body{
    text-align: center;
  }

  #okButton{
    width: 150px;
  }

  #dismissBtn{
    border:none;
    padding-left: 10px;
    padding-right: 10px;
  }

  .modal-title{
    padding-top: 30px;
    font-weight: bold;
    font-size: 22px;
