<% if !@is_onboarding %>
  <%= render 'layouts/logged_navbar' %> 
<% end %>

<section class="pricing">
  <% if @is_onboarding %>
    <div style="text-align:center;">
      <a class="back-image" data-toggle="modal" data-target="#cancelModalTodolegal">
        <img class="image" border="0" alt="Logo TodoLegal" src="/img/Icon-Todolegal-gray20px.svg"/>
      </a>
      <a class="back-image" data-toggle="modal" data-target="#cancelModalValid">
        <img class="image" border="0" alt="Logo Valid" src="/img/Icon-Valid-gray20px.svg"/>
      </a>
    </div>

    <%= render "cancel_modal", id: "cancelModalTodolegal", cancel_url: root_path %>
    <%= render "cancel_modal", id: "cancelModalValid", cancel_url: "https://valid.todolegal.app" %>

    <% if @user_just_registered %>
      <div class="alert alert-success alert-dismissible fade show" role="alert" id="savedArticle"> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
          La información de perfil ha sido guardada, procede a elegir un plan para tu cuenta.
      </div>
    <% end %>
  <% end %>


  <div class="card card--pricing">
  <div class="container">
    <div class="row">
      <div class="pricing-heading col-12">
      <h2 class="title">Elige un Plan</h3>
      <p class="body">Si eliges el plan Pro, puedes pagar mensual o anualmente, cancelar o bajar al plan básico en cualquier momento. Con ambas cuentas puedes acceder a <a href="https://todolegal.app/">TodoLegal</a> y a <a href="https://valid.todolegal.app/">Valid</a>, lo que cambia es el tipo de acceso a la información: limitado o ilimitado.</p>
      </div>
    </div>

    <div class="row row-eq-height">
      <% if !@activate_pro_account %>
      <!-- Free Tier -->
        <div class="col-lg-6 card card--dark-100 mb-5 mb-lg-0 card--basic">
          <div class="card-body">
            <h5 class="card-title">Básico</h5>
            <h6 class="card-price">Gratis</h6>
            <%= render 'basic_pricing_description' %>
          </div>
          <div class="card-bottom">
            <% if @return_to %>
              <%= link_to "Continuar con Plan Básico", @return_to, params: {pricing_onboarding: @pricing_onboarding}, class:"btn btn-block btn-outline-primary" %>
            <% else %>
              <%= link_to "Continuar con Plan Básico", @select_basic_plan_path, params: {pricing_onboarding: @pricing_onboarding}, class:"btn btn-block btn-outline-primary" %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Pro Tier -->
        <div class="col-lg-6 card card--dark-100" id="pro-tier">
          <div class="card-body">
            <h5 class="card-title">Enterprise</h5>
            <h6 class="card-price">$ <%= ENTERPRISE_PRICE %><span class="period">/mensual</span></h6>
            <small>Para empresas.</small>
            <%= render 'pro_pricing_description' %>
          </div>
          <div class="card-bottom">
            <a href="https://calendly.com/melissa-castro/30min" class="btn btn-block btn-primary"> Programa una llamada </a>
            <p class="text-center py-2 change-plan-link" onclick="changePlan(2)">Cambiar a Pro</p>
          </div>
      </div>

      <!-- Card - Plan Pro Mensual  -->
        <div class="col-lg-6 card card--dark-100 hide-plan" id="pro-mensual">
          <div class="card-body">
            <h5 class="card-title">Pro</h5>
            <h6 class="card-price">$<%= BASE_PRICE_MONTHLY %><span class="period">/mensual</span></h6>
            <small>Para usuarios individuales.</small>
             <!-- Agregar el switch de mensual a anual tambien  -->
             <%= render 'pro_pricing_description' %>
          </div>
          <div class="card-bottom">
            <%= button_to "Elegir Plan Pro", @select_pro_plan_path, method: :get, params: {is_monthly: true, is_onboarding: @is_onboarding, pricing_onboarding: @pricing_onboarding, go_to_law: @go_to_law}, class:"btn btn-block btn-primary"%>
            <p class="text-center py-2 change-plan-link" onclick="changePlan(1)">Cambiar a Enterprise</p>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</section>

<script>
  function changePlan(plan){
    if(plan == 1){
      document.getElementById("pro-tier").classList.remove('hide-plan');
      document.getElementById("pro-mensual").classList.add('hide-plan');
    }else{
      document.getElementById("pro-mensual").classList.remove('hide-plan');
      document.getElementById("pro-tier").classList.add('hide-plan');
    }
  }
</script>

