<script>
  function sendParameters(){
      var param1 = document.getElementById("email1").value;
      var param2 = document.getElementById("email2").value;
      var params = param1 + ',' + param2;
      document.getElementById("custId").value = params;
  }

  function cloneElement(){
    var inputForm =document.getElementById("inputElement");
    var cln = inputForm.cloneNode(true);
    document.getElementById("formGroup").appendChild(cln);
  }

  function removeElement(){
    var x = document.getElementById("formGroup").childElementCount;
    if(x > 2){
      var inputForm = document.getElementById("formGroup").lastChild;
      inputForm.remove();
    }
  }
</script>

