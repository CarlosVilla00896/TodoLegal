
<% content_for :title, "TodoLegal - El buscador de leyes de Honduras" %>

<div class="jumbotron d-none d-sm-block" align="center" style="padding-top: 0px; padding-bottom: 20px;background-color: #EFF3F8;margin: 0px">
  <a href="/"><img align="center" src="/img/logo_landing_mobile.png" class="img-fluid-vertical" height="300"></a>
</div>

<div class="jumbotron d-block d-sm-none" style="padding-top: 0px; padding-bottom: 0px;background-color: #EFF3F8;margin: 0px">
  <a href="/"><img align="center" src="/img/logo_landing_mobile.png" class="img-fluid" height="300"></a>
</div>

<div class="container container--home">

  <div class="d-none d-xl-block">
    <h3 align="center">El buscador de Leyes y Códigos de Honduras</h3>
  </div>
  <div class="d-xl-none">
    <h6 align="center">El buscador de Leyes y Códigos de Honduras</h6>
  </div>

  
  <br/>
  <%= render partial: 'search_law_input', locals: {target_url: '/search_law', home_flag: true } %>

  <div class="row">
    <% @tags.each do |tag| %>
      <% if tag.laws.count != 0 %>
        <div class="col-sm-6 col-md-4 py-2">
          <div class="card card-body h-100" style="padding:0px">
            <a class="" href="<%= tag_path(tag) %>" style="padding:20px">
              <h5 class="card-title"><%= tag.name %></h5>
              <p><%= tag.laws.count %> leyes</p>
            </a>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <p class="resultinfo"><%= law_count %> leyes ingresadas</p>

  <% if !@current_user_plan_is_active %>
  <div class="card container text-white animate__animated animate__bounce" id="closeablecard" style="background-color:#171F2A;">

  <div class="card-header bg-transparent border-bottom-0">
    <button data-dismiss="alert" data-target="#closeablecard" type="button" class="close" aria-label="Close">
      <span aria-hidden="true" style="color: white;">&times;</span>
    </button>
  </div>
  
    <div class="card-body">
    <h5 class="billboard-title">Suscríbite a nuestro boletín semanal</h5>
    <p class="text-white">Déjanos tu correo y recibirás un un resumen semanal con los cambios normativas más importantes del país.</p>
    <br>
    <form class="form-inline" style="margin-top:-2em; margin-left:-1em;">
    <%= form_tag({:controller => "mailing_list", :action => "addEmail"}, method: :post) do %>
        <div class=" form-group mx-sm-3 mb-2">
          <%= text_field_tag :email, params[:email], class:"form-control bg-light",  id:"inputEmail", placeholder:"Correo", style:"padding-right:5em;" %>
        </div>
        <%= submit_tag "Enviar", class: 'btn btn-primary mb-2', type:"submit", style:"padding:0.7em;" %>
      <% end %>
  
  </div>
  
  </div>
  </form>
  </div>
  <% end %>
</br>



<%= javascript_pack_tag "help_card" %>
<%= javascript_pack_tag "hide_card" %>