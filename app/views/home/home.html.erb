<% content_for :title, "TodoLegal - El buscador de leyes de Honduras" %>

<div class="jumbotron d-none d-sm-block" align="center" style="padding-top: 0px; padding-bottom: 20px;background-color: #EFF3F8;margin: 0px">
  <a href="/"><img align="center" src="/img/logo_landing_mobile.png" class="img-fluid-vertical" height="300"></a>
</div>

<div class="jumbotron d-block d-sm-none" style="padding-top: 0px; padding-bottom: 0px;background-color: #EFF3F8;margin: 0px">
  <a href="/"><img align="center" src="/img/logo_landing_mobile.png" class="img-fluid" height="300"></a>
</div>

<div class="container container--home">

  <div class="d-none d-xl-block">
    <h3 align="center">El buscador de Leyes y Códigos de Honduras</h3>
  </div>
  <div class="d-xl-none">
    <h6 align="center">El buscador de Leyes y Códigos de Honduras</h6>
  </div>

  
  <br/>
  <%= render partial: 'search_law_input', locals: {target_url: '/search_law', home_flag: true } %>

  <div class="row">
    <% @tags.each do |tag| %>
      <% if tag.laws.count != 0 %>
        <div class="col-sm-6 col-md-4 py-2">
          <div class="card card-body h-100" style="padding:0px">
            <a class="" href="<%= tag_path(tag) %>" style="padding:20px">
              <h5 class="card-title"><%= tag.name %></h5>
              <p><%= tag.laws.count %> leyes</p>
            </a>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <p class="resultinfo"><%= law_count %> leyes ingresadas</p>

  <% if !@current_user_plan_is_active %>
    <div class="billboard billboard--home">
      <div class="billboard-content">
        <h5 class="billboard-title">TodoLegal es gratis.</h5>
        <p class="billboard-body">
          También somos desarrolladores de <b>Valid</b>, donde nos especializamos en procesar <b>La Gaceta</b>. Puedes conocer nuestro planes empresariales visitando la herramienta.
          <i class="text-muted d-block">Puedes cancelar la suscripción en cualquier momento.</i>
        </p>
      </div>
      <div class="billboard-actions form-group" id="change-plan-btn-form">
        <% if user_signed_in? %>
          <%= button_to "Ver planes", pricing_path, method: :get, params: {activate_pro_account: true}, remote: true, class:"btn btn-primary",  id:"change-plan-button"%>
        <% else %>
          <%= button_to "Ver planes", pricing_path, method: :get, params: {is_onboarding: true, pricing_onboarding: true}, remote: true, class:"btn btn-primary",  id:"change-plan-button"%>
        <% end %>
      </div>
    </div>
  <% end %>
</br>
<div class="billboard billboard--home">
<div class="billboard-content">
  <h5 class="billboard-title">Suscribete a nuestra lista de correos.</h5>
  <p class="billboard-body">Y mantente actualizado sobre las leyes del pais.<p>

  
   #mailing_list
   #addEmail

    <%= form_tag({:controller => "mailing_list", :action => "addEmail"}, method: :post) do %>
        <%= label_tag  "Correo Electronico:" %>
        <%= text_field_tag :email, params[:email] %>
        <%= submit_tag "Agregar" %>
    <% end %>
</div>
</div>

</div>


<%= javascript_pack_tag "help_card" %>
