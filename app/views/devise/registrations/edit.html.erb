<% if user_signed_in? %>
    <%= render 'layouts/logged_navbar' %>        
<% else %>
    <%= render 'layouts/unlogged_navbar' %> 
<% end %>

<div class = "container">
  <div class="card">
    <div class="card-body">
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Start edition of user data-->
      <div class="row">
        <div class ="col-md-2">
          <div class="circle">
            <%= current_user.first_name[0].upcase + current_user.last_name[0].upcase%>
          </div>
        </div>
        <div class = "col-md-10" id="user-data">
        <!-- Edit name and Last name -->
          <div class = "row">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <div class = "user-name col-md-12">
                <div id="name">
                  <%= current_user.first_name + " " + current_user.last_name %>
                  <span class = "edit-text" onclick="showDialog('name', 'editName')"><i class="fas fa-pencil-alt"></i> Editar nombre</span>
                </div>
                <div class="card" id="editName">
                  <button type="button" class="close" onclick = "showDialog('name', 'editName')" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <div class = "card-body">
                    <div class="form-group">
                      <div class="row">
                        <div class="col-6 form-group">
                          <%= f.label :Nombre %><br />
                          <%= f.text_field :first_name, autofocus: true, class:"form-control"%>
                        </div>
                        <div class="col-6 form-group">
                          <%= f.label :Apellido %><br />
                          <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
                        </div>
                      </div>
                      <label class="confirm-pass-label">Ingresa tu contraseña actual para confirmar los cambios</label>
                      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control"%>
                      <%= f.submit "Guardar cambios", class: 'submit-btn btn btn-primary'%>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <!-- Edit occupation -->
          <div class = "row">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <div class = "col-md-12">
                <div id="occupation">
                
                  <%if current_user.occupation === "Otro"%>
                    <%if current_user.other_occupation === " "%>
                      <%= current_user.occupation%>
                    <% else %>
                      <%= current_user.other_occupation%>
                    <% end %>
                  <% else %>
                    <%= current_user.occupation%>
                  <% end %>

                  <span class = "edit-text" onclick ="showDialog('occupation', 'editOccupation')"><i class="fas fa-pencil-alt"></i> Editar profesión</span> 
                </div>
                <div class="card" id="editOccupation">
                  <button type="button" class="close" onclick = "showDialog('occupation', 'editOccupation')" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <div class = "card-body">
                    <div class="form-group">
                      <div class="form-check form-check-inline" style="border-radius: 8px;background-color: #171F2A;color: white;margin-bottom: 4%;">
                        <%= f.radio_button :occupation, "Abogado", {class: "form-check-input", id:"radio1", checked:"checked", onclick:"showOtherField('Abogado')"}%>
                        <label class="form-check-label" for="radio1">Abogado</label>
                      </div>
                      <div class="form-check form-check-inline" style="border-radius: 5px;background-color: #EFF3F8;margin-bottom: 4%;">
                        <%= f.radio_button :occupation, "Estudiante", {class: "form-check-input", id:"radio2", onclick:"showOtherField('Estudiante')"}%>
                        <label class="form-check-label" for="radio2">Estudiante</label>
                      </div>
                      <div class="form-check form-check-inline" style="border-radius: 5px;background-color: #EFF3F8;margin-bottom: 4%;">
                        <%= f.radio_button :occupation, "Otro", {class: "form-check-input", id:"radio3", onclick:"showOtherField('Otro')"}%>
                        <label class="form-check-label" for="radio3">Otro</label>
                      </div>
                          <div class="form-group"  id="otherField" style="display: none;">
                        <label> ¿A qué te dedicas?</label>&nbsp;<label id="label-opcional">Opcional</label>
                        <%= f.text_field :other_occupation, autocomplete: "Otro", value:" ", class:"form-control"%>
                      </div>
                      <label class="confirm-pass-label">Ingresa tu contraseña actual para confirmar los cambios</label>
                      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control"%>
                      <%= f.submit "Guardar cambios", class: 'submit-btn btn btn-primary'%>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <!-- Edit email -->
          <div class = "row">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <div class = "col-md-12">
                <div id="email">
                  <%= current_user.email%>
                  <span class = "edit-text" onclick = "showDialog('email', 'editEmail')"><i class="fas fa-pencil-alt"></i> Editar correo</span> 
                </div>
                <div class="card" id="editEmail">
                  <button type="button" class="close" onclick = "showDialog('email', 'editEmail')" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <div class = "card-body">
                    <div class="form-group">
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                      <label class="confirm-pass-label">Ingresa tu contraseña actual para confirmar los cambios</label>
                      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control"%>
                      <%= f.submit "Guardar cambios", class: 'submit-btn btn btn-primary'%>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <!-- Edit Password -->
          <div class = "row">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <div class = "col-md-12">
                <div id="password">
                  <span class = "edit-text" onclick = "showDialog('password', 'editPassword')"><i class="fas fa-pencil-alt"></i> Cambiar contraseña</span> 
                </div>
                <div class="card" id="editPassword">
                  <button type="button" class="close" onclick = "showDialog('password', 'editPassword')" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <div class = "card-body">
                    <div class="form-group">
                      <label>Dejala en blanco si no la quieres cambiar</label>
                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                      <small id="passwordHelpBlock" class="form-text text-muted">
                        <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
                      </small>
                    
                      <label>Confirmar contraseña</label>
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"%>
                    
                      <label class="confirm-pass-label">Ingresa tu contraseña actual para confirmar los cambios</label>
                      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control"%>
                      <%= f.submit "Guardar cambios", class: 'submit-btn btn btn-primary'%> 
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- End edition of user data-->

      <% if current_user_is_pro %>
        <section class="change-plan">
          <div class="change-plan-content">
            <h5 id="change-plan-title">¿Listo para cambiar tu plan?</h5>
            <p id="change-plan-text">Tendrás acceso a más de 150 documentos de legislación hondureña.</p>
            <p id="change-plan-link"> Leer más sobre el Plan Pro</p>
          </div>
          <div class="form-group" id="change-plan-btn-form">
            <button type="button" class="btn btn-primary" id="change-plan-button">
              Cambiar Plan
            </button>
          </div>
        </section>
      <% end %>
      
      <hr>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <!-- Edit preferences -->
      <p class = "titles">Preferencias</p>
      <div class="form-group">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="form-check" style="border-radius: 5px;background-color: #EFF3F8;margin-bottom: 4%;">
            <%= f.check_box :receive_information_emails, autofocus: true, class: "form-check-input check-submit", id:"check1"%>
            <label class="form-check-label" for="check1">Quiero recibir el boletín informativo a mi correo electrónico.</label>
          </div>
          <div class="form-check" style="background: #171F2A;color: white;border-radius: 8px;">
            <%= f.check_box :is_contributor, autofocus: true, class: "form-check-input check-submit", id:"check2"%>
            <label class="form-check-label" for="check2">Quiero participar en actividades para contribuir al estudio y mejora de la app.</label>
          </div>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control"%>
          <%= f.submit "Guardar cambios", class: 'btn btn-primary', id:"submitPreferences", style:"display:none;"%>
        <% end %>
      </div>
      <hr>
      <!-- Cancel Button -->
      <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#cancelAccountModal" id="delete-account-btn">Borrar tu cuenta</button>
      <!-- End Cancel Button -->

      <!-- Start delet account Modal -->
      <div class="modal fade" id="cancelAccountModal" tabindex="-1" role="dialog" aria-labelledby="cancelModalCenterTitle" aria-hidden="true">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="cancelModalLongTitle">¿Estás seguro?</h5>
                <% if current_user_is_pro %>
                  <label id="labelPro">
                    Si borras tu cuenta ya no podras accesar a los documentos exclusivos para cuentas Pro.<br>
                    También puedes modificar tu suscripción si decides <a href="/" style="text-decoration: underline;">bajar a la cuenta básica.<a>
                  </label>
                <% else %>
                  <label id="labelBasico">Si borras tu cuenta ya no podras accesar a los documentos exclusivos para cuentas básicas.</label>
                <% end %>
                <div class="form-group" id="bottonsGroup">
                  <%= button_to "Borrar cuenta", registration_path(resource), method: :delete, remote: true, id:"deleteAccount", class:"btn btn-outline-danger"%>
                  &nbsp;&nbsp;&nbsp;
                  <button type="button" id="dismissBtn" class="btn btn-secondary" data-dismiss="modal">Regresar</button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <!--End delete account modal -->
    </div>
  </div>
</div>

<script>

  function showDialog (x, y){
    var x = document.getElementById(x);
    var y = document.getElementById(y);
    if (x.style.display === "none") {
      x.style.display = "block";
      y.style.display = "none";
    } else {
      x.style.display = "none";
      y.style.display = "block";
    }
  }

  addEventListener("change", function(event){
    $('.form-check').each(function(){
      if($(this).children().is(":checked")) {
        this.classList.add('checked');
      } else {
        this.classList.remove('checked');
      }
    });
  });

  var checkBoxes = document.getElementsByClassName("check-submit");
  
  var checkBoxClick = function (){
    document.getElementById("submitPreferences").click();
  };
  //triggers form submit when checkboxes clicked
  checkBoxes[0].addEventListener("click", checkBoxClick, false );
  checkBoxes[1].addEventListener("click", checkBoxClick, false );

  function showOtherField(field){
    if(field === "Otro")
    {
      document.getElementById("otherField").style.display = "block";
    }else
    {
      document.getElementById("otherField").style.display = "none";
    }

  }

</script>

