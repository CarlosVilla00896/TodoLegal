<div class="container d-flex justify-content-center" style="margin-top:2%;">
  <div class="card w-75 shadow p-3 mb-5 bg-white rounded">
    <img class="card-img-top" src="/img/logo_landing.png" alt="Card image cap" class="img-fluid">
    <div class="card-body">
      <h3 class="card-title text-center">Recuperación de la cuenta</h2>
      <p>Le enviaremos instrucciones para recuperar su cuenta a</p>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Correo electrónico" %>
        </div>

        <div class="form-group">
          <%= f.submit "Enviar instrucciones de recuperación", class: 'btn btn-primary btn-block'%>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-center">
      <em><%= render "devise/shared/links" %></em>
    </div>
  </div>
</div>
