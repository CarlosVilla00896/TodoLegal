<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Documentos</h1>

  <form action="<%= documents_path %>" method="get">
    <div>
      <input name="query" value="<%= @query %>" type="text" placeholder="">
      <div>
        <button type="submit" type="button">Buscar</button>
      </div>
    </div>
  </form>

  <%= link_to 'Subir documento', new_document_path %>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Número de publicación</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= document.name %></td>
          <td><%= document.publication_number %></td>
          <td><%= link_to 'Show', document %></td>
          <td><%= link_to 'Edit', edit_document_path(document) %></td>
          <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>