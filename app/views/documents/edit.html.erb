<div class="container">
  <h1>Editando Documento</h1>

  <ul class="nav nav-tabs" id="lawEditorTab" role="tablist">
    <li  class="nav-item">
      <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="modifications-tab" data-toggle="tab" href="#modifications" role="tab" aria-controls="modifications" aria-selected="false">Tags</a>
    </li>
  </ul>

  <div class="tab-content" id="myTabContent">

    <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
      <%= render 'edit_form', document: @document %>
    </div>
    
    <div class="tab-pane fade" id="modifications" role="tabpanel" aria-labelledby="modifications-tab">
      <%= render 'edit_tags', document: @document %>
    </div>

  </div>


  
</div>